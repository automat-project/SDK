					"enum": [
						"general-purpose"
					]
				}
			},
			"required": [
				"type"
			]
		},
		"InformationSignal": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"information"
					]
				},
				"format": {
					"type": "string"
				}
			},
			"required": [
				"type",
				"format"
			]
		},
		"EnumerationSignal": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"enumeration"
					]
				},
				"items": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			},
			"required": [
				"type",
				"items"
			]
		},
