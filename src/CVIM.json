					"type": "string",
					"enum": [
						"int",
						"uint",
						"float",
						"double"
					]
				},
				"min": {
					"type": "number"
				},
				"max": {
					"type": "number"
				},
				"resolution": {
					"type": "number"
				},
				"unit": {
					"type": "string"
				}
			},
			"required": [
				"type",
				"format",
				"min",
				"max",
				"resolution",
				"unit"
			]
		}
	}
}